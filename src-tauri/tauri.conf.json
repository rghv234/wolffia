{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Wolffia",
    "version": "0.1.0",
    "identifier": "com.wolffia.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "title": "Wolffia",
                "width": 1200,
                "height": 800,
                "minWidth": 400,
                "minHeight": 300,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "transparent": false,
                "visible": false
            }
        ],
        "security": {
            "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' http://localhost:* https://*; img-src 'self' data: https://*; style-src 'self' 'unsafe-inline'; font-src 'self' data:; script-src 'self' 'unsafe-inline' 'unsafe-eval'"
        },
        "withGlobalTauri": true
    },
    "plugins": {
        "shell": {
            "open": true
        },
        "dialog": {
            "all": true
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "msi",
            "nsis"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [],
        "copyright": "Â© 2024 Wolffia Project",
        "category": "Productivity",
        "shortDescription": "E2EE Note-taking Workspace",
        "longDescription": "Wolffia is a self-hostable, end-to-end encrypted note-taking workspace.",
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": "",
            "wix": null,
            "nsis": {
                "languages": [
                    "English"
                ],
                "displayLanguageSelector": false
            }
        }
    }
}